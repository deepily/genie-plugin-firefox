{

  "manifest_version": 2,
  "name": "Genie Multiplexer for Firefox",
  "version": "0.3.2",
  "homepage_url": "https://github.com/deepily/genie-plugin-firefox",
  "description": "Records, transcribes and proofreads your voice, pasting it to the clipboard and/or into your browser.",

  "browser_action": {
    "default_icon": {
      "16": "icons/border-16.png",
      "32": "icons/border-32.png",
      "48": "icons/border-48.png"
    },
    "default_title": "Genie in the Box Multiplexer",
    "default_popup": "html/menubar.html"
  },
  "icons": {
    "48": "icons/border-48.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "MacCtrl+K"
      }
    },
    "popup-vox-to-text": {
      "suggested_key": {
        "default": "Ctrl+J",
        "mac": "MacCtrl+J"
      },
      "description": "Pops up voice to text recorder"
    }
  },
  "background": {
        "scripts": [
            "js/background-context-menu.js",
            "js/background.js"
        ],
        "type": "classic",
        "persistent": true
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "clipboardWrite",
    "clipboardRead",
    "storage",
    "tabs"
  ]
}
